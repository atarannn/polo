
extends ../layout/main
block variable
  -
    var title_page = 'characteristics'
    var id_page = 'id-page-characteristics'
    var class_page = 'class-page-characteristics'
    var breadcrumbsSubitem = [
      {
        label: 'Характеристики',
        link: pagesLink[0].characteristics
      }
    ]

block meta
  title= title_page
  meta(name='description', content='')
block head
    link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
  script(defer src='./assets/scripts/vendors.bundle.js')
  script(defer src='./assets/scripts/index.bundle.js')
  script(defer src='./assets/scripts/libs.js')
  script(defer src='./assets/scripts/index.js')
  script(defer src='./assets/scripts/loader.js')
  script(defer src='./assets/scripts/menu.js')
  script(defer src='./assets/scripts/footer.js')
block content
  .page-offset
    include ../components/breadcrumbs/breadcrumbs.pug
  .characteristics-wrapper
    .characteristics.reletive
      <svg width="217" height="217" viewBox="0 0 217 217" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="108.5" cy="108.5" r="85" stroke="#6C7A88" stroke-width="47" stroke-dasharray="1 38"/>
      <circle cx="108.5" cy="108.5" r="50.0796" transform="rotate(10.6372 108.5 108.5)" stroke="#6C7A88" stroke-width="26" stroke-dasharray="1 24"/>
      <circle cx="108.5" cy="108.5" r="29.6521" stroke="#6C7A88" stroke-width="16" stroke-dasharray="1 13"/>
      </svg>
      .characteristics-left.card-style
        img(src="./assets/images/characteristics/1.png")
        h6.characteristics-title.title Вентилируемые фасады
      .characteristics-right.card-style
        img(src="./assets/images/characteristics/2.png")
        h6.characteristics-title.title Свой земельный участок
    .characteristics-text.page-text
      img(src="./assets/images/characteristics/pony.svg")
      span Не нужно отказывать от городского комфорта
      |  доступны все городские сервисы: доставка еды и продуктов Glovo, Wolt, Bolt. Такси Яндекс Go или Bolt.
    .characteristics-big
      .card-style
        img(src="./assets/images/characteristics/3.png")
        .characteristics-big-title-wrapper
          h6.title Большая крытая терраса
          p.text можно сервировать обед или ужин на террасе укрывшись от жаркого солнца или прохладного дождя.
    .characteristics.top-bottom-offset
      .characteristics-left.card-style
        img(src="./assets/images/characteristics/4.png")
        h6.characteristics-title.title Паркинг у дома
      .characteristics-right.card-style
        img(src="./assets/images/characteristics/5.png")
        h6.characteristics-title.title Чистота и уход за территорией
    .characteristics-big
      .card-style
        img(src="./assets/images/characteristics/6.png")
        h6.characteristics-big-title-2.title Огороженная территория
    .btn-up
      <svg width="30" height="32" viewBox="0 0 30 32" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M28.5 10.8214L18.9706 1.5M18.9706 1.5L9.44118 10.8214M18.9706 1.5C18.9706 7.02381 18.9706 19.2452 18.9706 23.9405C18.9706 29.8095 12.9706 30.5 11.5588 30.5C10.4294 30.5 5.38235 30.5 1.5 30.5" stroke-linecap="round"/>
      </svg>

block footer
  include ../includes/footer-2.pug

block header
  include ../includes/header.pug
